{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "types/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:types": {
      "cache": false,
      "persistent": true
    },
    "check:pretty": {
      "cache": false,
      "persistent": true
    }
  }
}
